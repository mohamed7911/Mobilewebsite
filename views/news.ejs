<%- include('head.ejs')%>
<%- include('navbar.ejs')%>
<div class="container my-4">
    <%- include('F-navbar.ejs')%>
</div>
    <section>
        <div class="container">
            <h2 class="w-25 heading p-4">News</h2>
            <% for( let i = 0; i < result.length; i++ ) { %>
                <div class="row justify-content-center m-0 border bg-white my-4 py-4 align-items-center">
                    <div class="col-md-6">
                        <h3><a href="/news-content/<%= result[i].id %>" class="allNewsTitle"><%= result[i]["title"] %></a></h3>
                        <p><%= result[i]["desc"].slice(0,200)  %><% if (result[i]["desc"].length>200) { %>...<% } %></p>
                        <p><%= result[i]["date"] %></p>
                    </div>
                    <div class="col-md-2 text-center">
                        <a href="/news-content/<%= result[i].id %>"><img src="../<%= result[i]["imgurl"] %>" width="100px" alt=""></a>
                    </div>
                </div>
            <% } %>
        </div>
    </section>
<%- include('end.ejs')%>